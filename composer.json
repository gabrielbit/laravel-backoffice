{
    "name": "lucasruroken/laravel-backoffice",
    "description": "A set of libraries, helpers and templates for a backoffice (admin / panel) project.",
    "require": {
        "php":                    ">=5.6",
        "illuminate/support":     "~4.2",
        "illuminate/view":        "~4.2",
        "illuminate/pagination":  "~4.2",
	    "illuminate/database":    "~4.2",
	    "illuminate/config":      "~4.2",
	    "illuminate/translation": "~4.2",
	    "illuminate/validation":  "~4.2",
	    "way/generators":         "~2.0",
        "lucasruroken/laravel-font-awesome":     "dev-master",
        "lucasruroken/laravel-security":       "~2.1",
        "mustache/mustache":      "~2.4",
	    "maatwebsite/excel":      "~1.0",
        "laravelba/route-binder": "~1.0",
        "nette/reflection": "~2.3"
    },
    "require-dev": {

        "laravel/framework":                 "~4.2",
        "doctrine/common":                   "2.5.*@dev",
        "lucasruroken/laravel-doctrine":                  "dev-laravel4",
        "lucasruroken/laravel-backoffice-template":       "1.0.0",
        "phpspec/phpspec":                   "~2.0",
        "henrikbjorn/phpspec-code-coverage": "~0.2"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Guido Contreras Woda",
            "email": "gcontreras@digbang.com"
        }
    ],
	"autoload": {
		"psr-0": {
			"Digbang\\L4Backoffice\\": "src/"
		}
	},
	"repositories": [

		{ "type": "vcs", "url": "git@github.com:lucasruroken/laravel-font-awesome.git" },
		{ "type": "vcs", "url": "git@github.com:lucasruroken/laravel-security.git" },
		{ "type": "vcs", "url": "git@github.com:lucasruroken/laravel-doctrine.git" },
		{ "type": "vcs", "url": "git@github.com:lucasruroken/laravel-backoffice-template.git" }

	],
    "minimum-stability": "dev",
    "prefer-stable": true
}
