{
    "name": "digbang/l4-backoffice",
    "description": "A set of libraries, helpers and templates for a backoffice (admin / panel) project.",
    "require": {
        "php":                    ">=5.6",
        "illuminate/support":     "~4.2",
        "illuminate/view":        "~4.2",
        "illuminate/pagination":  "~4.2",
	    "illuminate/database":    "~4.2",
	    "illuminate/config":      "~4.2",
	    "illuminate/translation": "~4.2",
	    "illuminate/validation":  "~4.2",
	    "way/generators":         "~2.0",
	    "digbang/font-awesome":   "~1.0",
	    "mustache/mustache":      "~2.4",
	    "digbang/security":       "~2.0",
	    "maatwebsite/excel":      "~1.0",
        "laravelba/route-binder": "~1.0",
        "nette/reflection": "~2.3"
    },
    "require-dev": {
        "laravel/framework":                 "~4.2",
        "doctrine/common":                   "2.5.*@dev",
        "digbang/doctrine":                  "dev-laravel4",
        "digbang/backoffice-template":       "1.0.0",
        "phpspec/phpspec":                   "~2.0",
        "henrikbjorn/phpspec-code-coverage": "~0.2"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Guido Contreras Woda",
            "email": "gcontreras@digbang.com"
        }
    ],
	"autoload": {
		"psr-0": {
			"Digbang\\L4Backoffice\\": "src/"
		}
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "git@git.digbang.com:digbang/font-awesome.git"
		},
		{
			"type": "vcs",
			"url": "git@git.digbang.com:digbang/backoffice-template.git"
		},
		{
			"type": "vcs",
			"url": "git@git.digbang.com:digbang/security.git"
		},
		{
			"type": "vcs",
			"url": "git@git.digbang.com:digbang/doctrine.git"
		}
	],
    "minimum-stability": "dev",
    "prefer-stable": true
}
